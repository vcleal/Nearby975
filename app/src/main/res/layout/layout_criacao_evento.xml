<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView7"
        android:layout_gravity="center_horizontal" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/eventImage"
                android:visibility="gone"
                android:background="@android:drawable/ic_menu_camera"
                android:scaleType="fitCenter"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:maxLength="50"


                android:hint="Nome do Evento"
                android:id="@+id/nomeEvento"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="100"

                android:layout_margin="2dp"
                android:hint="Local do Evento"
                android:id="@+id/localEvento"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:maxLength="8"
                android:inputType="number"
                android:layout_margin="2dp"
                android:hint="Número de Ingressos"
                android:id="@+id/numeroIngressos"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_margin="2dp"
                android:maxLength="8"
                android:inputType="numberDecimal"
                android:hint="Preço do Ingresso"
                android:id="@+id/precoIngresso"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:layout_margin="2dp"
                android:maxLength="10"
                android:hint="Data do Evento"
                android:id="@+id/dataEvento"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:maxLength="5"
                android:layout_margin="2dp"

                android:hint="Horário do Evento"
                android:id="@+id/horaEvento"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="140dp"

                android:maxLength="300"
                android:layout_margin="2dp"
                android:hint="Descrição do Evento"
                android:id="@+id/descricaoEvento"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirmar"
                android:layout_marginBottom="70dp"
                android:id="@+id/button_conf_create_event" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>